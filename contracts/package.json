{
  "name": "@umbra/contracts",
  "version": "0.0.1",
  "description": "Contracts for the Umbra Protocol",
  "dependencies": {
    "@opengsn/gsn": "^2.1.0",
    "@openzeppelin/contracts": "^3.2.0",
    "@truffle/debug-utils": "^4.1.1",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@ethersproject/abstract-signer": "^5.0.6",
    "@ethersproject/bignumber": "^5.0.8",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^3.2.0",
    "@openzeppelin/test-helpers": "^0.5.10",
    "@typechain/ethers-v5": "^2.0.0",
    "@types/chai": "^4.2.13",
    "@types/fs-extra": "^9.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.11.8",
    "chai": "^4.2.0",
    "commitizen": "^4.2.1",
    "concurrently": "^5.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "ethereum-waffle": "^3.2.0",
    "ethers": "^5.0.17",
    "fs-extra": "^9.0.1",
    "hardhat": "^2.0.2",
    "hardhat-typechain": "^0.3.3",
    "husky": "^4.3.0",
    "mocha": "^8.1.3",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-beta.1",
    "shelljs": "^0.8.4",
    "solc": "0.7.4",
    "solhint": "^3.2.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.12",
    "ts-generator": "^0.1.1",
    "ts-node": "^8.10.2",
    "typechain": "^3.0.0",
    "typescript": "^3.9.7"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "author": "",
  "license": "MIT",
  "scripts": {
    "clean": "hardhat clean",
    "build": "hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier:list-different",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --ext .js,.ts .",
    "prettier": "prettier --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:list-different": "prettier --list-different \"**/*.{js,json,md,sol,ts}\"",
    "test": "concurrently --success first --kill-others \"hardhat node &>/dev/null\" \"hardhat test --network localhost\"",
    "typechain": "hardhat typechain",
    "prepare": "yarn run typechain",
    "deploy:umbra": "hardhat compile && node scripts/deploy.js"
  },
  "volta": {
    "extends": "../package.json"
  }
}
