{
  "name": "umbra",
  "version": "0.0.1",
  "description": "Send and receive stealth payments with the Umbra protocol",
  "author": "mds <17163988+mds1@users.noreply.github.com>",
  "private": true,
  "workspaces": {
    "packages": [
      "contracts-core",
      "contracts-periphery",
      "frontend",
      "umbra-js"
    ],
    "nohoist": [
      "**/mocha",
      "**/jest"
    ]
  },
  "devDependencies": {
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.14.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.3"
  },
  "resolutions": {
    "y18n": "^4.0.1"
  },
  "scripts": {
    "build": "lerna run build",
    "build-frontend": "yarn lerna run --ignore \"@umbra/contracts-*\" build",
