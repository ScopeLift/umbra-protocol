    "lint": "lerna run lint",
    "prettier": "lerna run prettier",
    "prepare": "lerna run prepare",
    "coverage": "lerna run coverage",
    "test": "lerna run test",
    "dev": "cd umbra-js && yarn build && cd ../frontend && yarn dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run precommit"
    }
  },
  "volta": {
    "node": "16.15.0",
    "yarn": "1.22.18"
  }
